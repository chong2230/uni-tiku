.list {
	width: 100%;
}
.item {
	width: 100%;
	height: 160rpx;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
}
.top {
	width: 100%;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
	-webkit-box-pack: start;
	-webkit-justify-content: flex-start;
	        justify-content: flex-start;
	height: 60rpx;
}
.type {
	color: #29B581;
	font-size: 32rpx;
	margin-left: 20rpx;
}
.title {
	color: #1A1A1A;
	font-size: 32rpx;
	margin-left: 20rpx;
}
.bottom {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
	height: 60rpx;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	margin-bottom: 20rpx;
}
.level {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	color: #1A1A1A;
	margin-left: 20rpx;
	font-size: 26rpx;
}
